<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/Timers_header">

        <EditTextPreference
            app:key="flagLength"
            app:title="@string/set_length_flag_t"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="20"/>

        <EditTextPreference
            app:key="timeoutLength"
            app:title="@string/set_length_timeout_t"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="1"/>

        <EditTextPreference
            app:key="yellow1Length"
            app:title="@string/set_length_yellow_card_1_t"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="1"/>

        <EditTextPreference
            app:key="yellow2Length"
            app:title="@string/set_length_yellow_card_2_t"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="2"/>
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/Other_header">

        <EditTextPreference
            app:key="scoreInc"
            app:title="@string/set_score_inc"
            app:useSimpleSummaryProvider="true"
            app:defaultValue="10"/>

        <SeekBarPreference
            app:key="audioVol"
            app:title="@string/set_audio_vol"
            app:min="0"
            app:seekBarIncrement="1"
            android:max="100"
            app:defaultValue="100"/>

        <SwitchPreferenceCompat
            app:key="vibeOn"
            app:title="@string/set_vibe_on"
            app:defaultValue="true"/>

        <ListPreference
            app:defaultValue="@string/dark_mode_def_value"
            app:entries="@array/dark_mode_entries"
            app:entryValues="@array/dark_mode_values"
            app:key="@string/dark_mode"
            app:title="@string/dark_mode"
            app:useSimpleSummaryProvider="true" />

        <Preference app:title="@string/privacy_policy">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/privacy_link"/>
        </Preference>
        <Preference app:title="@string/donation">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/donation_link"/>
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>